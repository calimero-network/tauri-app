{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Calimero Desktop",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "http://localhost:2528/**",
          "http://127.0.0.1:2528/**",
          "https://api.github.com/**",
          "https://github.com/**"
        ]
      },
      "process": {
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "network.calimero.desktop",
      "icon": ["icons/icon.png"],
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "10.15"
      }
    },
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:* http://127.0.0.1:* https://api.github.com; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:* https://api.github.com https://github.com;"
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/calimero-network/tauri-app/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ5MjQxOUM0QzJCODQ3MUEKUldRYVI3akN4QmtrMlNZRDVQMVJ4bTFvTW1JSHgycjhDNlhzZ3NOQXpHWHByOHMyZ2ZIU2RoOFYK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Calimero Desktop",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400
      }
    ]
  }
}
